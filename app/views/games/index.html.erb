<% if @games.length == 0 %>
  <div class="table-container">
    <div class="col-md-10 col-md-offset-1">
      <h1>Your Games</h1>
      <h4>no saved games :(</h4>
    </div>
  </div>
<% else %>

  <div class="table-container">
    <div class="col-md-10 col-md-offset-1">
      <h1>Your Games</h1>
      <table class="table table-hover table-condensed">
        <thead>
          <tr>
            <th>
              Score
            </th>
            <th>
              Date
            </th>
            <th>
              Resume Game
            </th>
            <th>
              Delete Game
            </th>
          </tr>
        </thead>
        <tbody>
          <% @games.each do |game| %>
            <tr>
              <td>
                <%= game.score %>
              </td>
              <td>
                <%= distance_of_time_in_words(game.created_at, Time.now, include_seconds: true)%> ago
              </td>
              <td>
                <button class="resume-button" data-val=<%= game.id %>>Resume</button>
              </td>
              <td>
                <%= link_to "Delete",  { :controller=>"games", action: :destroy, :id => game.id}, method: :delete, data: { confirm: 'Are you sure?' } %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
<% end %>

<%= render file: "public/game.html" %>

