<div class="games-index">
  <h1>My Games</h1>
  <table class="table table-striped">
    <tbody>
      <tr>
        <th>First Played</th>
        <th>Last Played</th>
        <th>Score</th>
        <th>Resume</th>
        <th>Delete</th>
      </tr>
      <% @games.each do |game| %>
      <tr>
        <td><%= game.created_at.localtime %></td>
        <td><%= game.updated_at.localtime %></td>
        <td><%= game.score %></td>
        <td>▷</td>
        <td>✕</td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
