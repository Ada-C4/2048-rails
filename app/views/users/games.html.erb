<div class="container">
  <div class="heading">
    <h1 class="title">My Games</h1>
  </div>
  <h2>Active Games</h2>
  <table class="table">
    <thead>
      <tr>
        <td></td>
        <td>Last played</td>
        <td>Score</td>
        <td>Load?</td>
      </tr>
    </thead>
    <tbody>
      <% @active_games.each do |game| %>
        <tr>
          <td><%= link_to '<i class="fa fa-trash-o"></i>'.html_safe, delete_game_path(id: game.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <td><%= time_ago_in_words(game.updated_at) %> ago</td>
          <td><%= game.score ? game.score : "0" %></td>
          <td class="past-game"><%= link_to "Load!", root_path(game_id: game.id) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <h2>Completed Games</h2>
  <table class="table">
    <thead>
      <tr>
        <td></td>
        <td>Time Completed</td>
        <td>Score</td>
        <td>Won?</td>
      </tr>
    </thead>
    <tbody>
      <% @completed_games.each do |game| %>
        <tr>
          <td><i class="fa fa-trash-o"></i></td>
          <td><%= time_ago_in_words(game.updated_at) %> ago</td>
          <td><%= game.score ? game.score : "0" %></td>
          <td><%= game.won == true ? "yes!" : "no :(" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

</div>
