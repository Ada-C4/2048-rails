<div class="row">
  <h1>Saved Games</h1>
</div>
<div class="row">
  <table class="table table-hover">
    <thead>
      <th>Last Played</th>
      <th>Score</th>
      <th></th>
    </thead>
    <tbody>
      <% @games.each do |game| %>
        <tr>
          <td><%= game.updated_at.strftime("%F") %></td>
          <td><%= game.score %></td>
          <td><%= link_to "Play", load_path(game.id), class: "btn btn-success" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

