<div class="row">
  <h1>Saved Games</h1>
</div>
<div class="row">
  <table class="table table-hover">
    <thead>
      <th>Last Played</th>
      <th>Score</th>
      <th></th>
    </thead>
    <tbody>
      <% @games.each do |game| %>
        <tr>
          <td><%= game.updated_at.strftime("%F") %></td>
          <td><%= game.score %></td>
          <td><button class="btn btn-success load-button", data-val= <%= game.id %> >Play</button></td>
          <td><%= link_to 'Delete',  { action: :destroy, id: game.id }, method: :delete, class: "btn btn-danger" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
